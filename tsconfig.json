{
    "compilerOptions": {
        "module": "commonjs",
        "moduleResolution": "node",
        "declaration": true,
        "sourceMap": true,
        "inlineSources": true,
        "target": "es5",
        "experimentalDecorators": true,
        "importHelpers": false,
        "noEmitHelpers": true,
        "outDir": "dist",
        "lib": [
            "dom",
            "es6"
        ],
        "types": [
            "@feather-ts/feather-ts"
        ]
    },
    "exclude": [
        "node_modules",
        "dist"
    ]
}
